{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en,nl,en-GB",
  "useGitignore": true,
  "ignorePaths": [
    "node_modules",
    "build",
    ".docusaurus",
    "playwright-report",
    "static/jsdoc",
    "docs-site",
    "coverage",
    "dist",
    "**/*.lock",
    "**/*.min.*"
  ],
  "files": ["**/*.{md,mdx,ts,tsx,js,jsx,json,yml,yaml}"],
  "dictionaries": ["softwareTerms", "node", "en-gb", "en_us"],
  "flagWords": ["obvoius", "teh", "adress"],
  "words": [
    "Storybook",
    "Playwright",
    "Vitest",
    "Docusaurus",
    "OWASP",
    "ADR",
    "SmartPomodoro",
    "a11y",
    "jsx",
    "tsx"
  ],
  "ignoreRegExpList": [
    "/https?:\\/\\/[\\w\\-./?#%&=+,:;@~]+/g",
    "/`{1,3}[\\s\\S]*?`{1,3}/g"
  ]
}
