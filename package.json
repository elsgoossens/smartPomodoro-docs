{
  "name": "smart-pomodoro-docs",
  "version": "1.0.0",
  "description": "Smart Pomodoro Documentation Workspace â€” Docusaurus 3, Storybook 9, Vite 5, React 18.",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "docs:clear": "docusaurus clear",
    "docs:start": "docusaurus start",
    "docs:build": "docusaurus build",
    "docs:serve": "docusaurus serve build",
    "docs:api": "rimraf docs/api && jsdoc -c jsdoc.config.json",
    "docs:js": "jsdoc -c jsdoc.config.json",
    "docs:js:md": "node scripts/build-jsdocs-md.mjs",
    "lint:md": "markdownlint \"**/*.md\" \"!node_modules\"",
    "lint:remark": "remark . --ext .md,.mdx --silently-ignore",
    "lint:spelling": "cspell lint \"**/*.{md,mdx,ts,tsx,js,jsx,json,yml,yaml}\" --no-progress",
    "lint:docs": "npm run lint:md && npm run lint:remark && npm run lint:spelling",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
